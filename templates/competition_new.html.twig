{% extends 'common/base.html.twig' %}

{% block body %}
    Available competitions:
    {% for competition in competitions %}
        {{ competition.name }}
    {% endfor %}
    <hr>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.name) }}
    </div>
    <div class="form-group">
        {{ form_row(form.location) }} --> <a href="{{ path('new_location') }}">New Location</a>
    </div>
    <div class="form-group">
        {{ form_row(form.sport) }} --> <a href="{{ path('new_sport') }}">New Sport</a>
    </div>
    <div class="form-group">
        {{ form_row(form.multianual) }}
    </div>
    <div class="form-group">
        {{ form_row(form.flagPath) }}
    </div>
    <div class="form-group">
        {{ form_row(form.submit) }}
    </div>
    {{ form(form) }}
{% endblock %}

