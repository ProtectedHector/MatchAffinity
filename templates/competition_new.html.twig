{% extends 'common/base.html.twig' %}
{% import "macros/forms.html.twig" as forms %}

{% block body %}
    Available competitions:
    {% for competition in competitions %}
        {{ competition.name }}
    {% endfor %}
    <hr>
    {{ form_start(form) }}

    {{ forms.form_field(form.name) }}
    {{ forms.form_group(form.location, path('new_location')) }}
    {{ forms.form_group(form.sport, path('new_sport')) }}
    {{ forms.form_field(form.multianual) }}
    {{ forms.form_field(form.flagPath) }}
    {{ forms.form_field(form.submit) }}

    {{ form(form) }}
{% endblock %}

